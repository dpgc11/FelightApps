<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_sensor_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.felightapps.Sensors.SensorListActivity">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sensor_accelerometer_values_activity"
            android:text="Accelerometer"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sensor_magnetic_field_values_activity"
            android:text="Magnetic Field"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sensor_gravity_values_activity"
            android:text="Gravity"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sensor_shake_detect_activity"
            android:text="Shake Detect"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"/>

    </LinearLayout>
</ScrollView>