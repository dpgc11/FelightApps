<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.felightapps.NotificationsDemo.NotificationDemoActivity"
    android:orientation="vertical"
    android:padding="8dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_generate_notification"
        android:text="Generate Notification"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_play_sound"
        android:text="Play Sound"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_vibrate"
        android:text="Vibrate Device"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_do_all_of_the_above"
        android:text="Do All Of The Above"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>
